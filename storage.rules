rules_version = '2';

// Storage rules for service request images
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all service request images
    match /service-requests/{requestId}/{allPaths=**} {
      allow read: if true;
      // Allow write access for authenticated users or allow public writes for service requests
      // You can restrict this further if needed
      allow write: if request.resource.size < 10 * 1024 * 1024 // 10MB limit
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Fallback: deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
