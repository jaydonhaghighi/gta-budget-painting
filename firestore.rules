rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to serviceRequests collection
    // This is for a public service booking system
    match /serviceRequests/{document} {
      allow read, write: if true;
    }
    
    // Allow public read/write access to all other documents
    // This is for development - you may want to restrict this in production
    match /{document=**} {
      allow read, write: if true;
    }
  }
}